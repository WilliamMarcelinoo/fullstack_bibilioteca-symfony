{% extends 'base.html.twig' %}

{% block title %}Lista de Livros{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-header bg-secondary text-white">
      <h2 class="mb-0">Lista de Livros</h2>
    </div>
    <div class="card-body">
      {% if books is not empty %}
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Título</th>
              <th>Autor</th>
              <th>Ano</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            {% for book in books %}
              <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.year }}</td>
                <td>
                  <a href="{{ path('book_edit', {id: book.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                  <form action="{{ path('book_delete', {id: book.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja deletar este livro?');">
                    <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                  </form>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% else %}
        <p class="text-center">Nenhum livro cadastrado.</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
